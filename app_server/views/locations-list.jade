extends layout

include _includes/sharedHTMLFunctions

block contentBody
    #page.page-header
        .row
            .col-lg-12
                h1= pageHeader.title
                    small &nbsp; - #{pageHeader.strapline}

    #location__list
        .row
            .col-xs-12.col-sm-8
                .row.list-group
                    each location in locations
                        .list-group-item.col-xs-12
                            h4
                                a(href='/location-info')= location.name
                                small &nbsp;
                                    +outputRating(location.rating)
                                div.pull-right
                                    +outputCoords(location.coords)
                                p.address= location.address
                                p.description
                                    +outputFacilities(location.facilities, true)

            .col-xs-12.col-sm-4
                p.lead= sidebar.lead